<p id="notice"><%= notice %></p>

<h1>Listing Workflows</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Kind</th>
      <th>Active</th>
      <th>Storage folder</th>
      <th>Db folder</th>
      <th>Transcode</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @workflows.each do |workflow| %>
      <tr>
        <td><%= workflow.title %></td>
        <td><%= workflow.kind %></td>
        <td><%= workflow.active %></td>
        <td><%= workflow.storage_folder %></td>
        <td><%= workflow.db_folder %></td>
        <td><%= workflow.transcode_id %></td>
        <td><%= link_to 'Show', workflow %></td>
        <td><%= link_to 'Edit', edit_workflow_path(workflow) %></td>
        <td><%= link_to 'Destroy', workflow, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

