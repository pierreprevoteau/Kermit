<p id="notice"><%= notice %></p>

<h1>Listing Media</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Sort</th>
      <th>State</th>
      <th>Folder</th>
      <th>Duration</th>
      <th>Created by</th>
      <th>Updated by</th>
      <th>Tag</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @media.each do |medium| %>
      <tr>
        <td><%= medium.title %></td>
        <td><%= medium.sort_id %></td>
        <td><%= medium.state_id %></td>
        <td><%= medium.folder_id %></td>
        <td><%= medium.duration %></td>
        <td><%= medium.created_by %></td>
        <td><%= medium.updated_by %></td>
        <td><%= medium.tag %></td>
        <td><%= link_to 'Show', medium %></td>
        <td><%= link_to 'Edit', edit_medium_path(medium) %></td>
        <td><%= link_to 'Destroy', medium, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

